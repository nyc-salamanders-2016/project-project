<!DOCTYPE html>
<html>
  <head>
    <title>FinalProjectCookin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="henridoingcss">
    <nav id="header-css">
      <h1> Final Project Thyme </h1>
      <%= link_to 'Home', pitches_path %>
      <% if logged_in? %>
      	<%= link_to 'Logout', logout_path,
                  method: :delete %>
                  <p>Welcome, <%= current_user.username%>!</p>
      <% else %>
      	<%= link_to 'Register', new_user_path %>
    		<%= link_to 'Login', '/login' %>
    	<% end %>
    </nav>
    <%= yield %>
  </body>
</html>
